# Auto-detect text files and normalize in Git
* text=auto
.gitattributes text eol=lf

# Keep source/config files as LF
*.py text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.env text eol=lf
*.sh text eol=lf

# Keep Windows scripts as CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
